<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/locationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/return_button"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:background="#92F8B49F"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="69dp"
        android:layout_height="90dp"
        android:layout_above="@+id/parentRelative"
        android:layout_alignRight="@+id/locationText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="342dp"
        android:layout_marginLeft="342dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="607dp"
        android:background="#FF5722"
        android:backgroundTint="#FFA500"
        android:tint="#0000"
        app:srcCompat="@android:drawable/ic_menu_revert"
        tools:ignore="UnknownId" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="461dp"
        android:layout_below="@+id/locationText"
        android:layout_marginTop="22dp">

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/return_button"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"

        android:background="#FFFFFF"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            tools:layout_editor_absoluteX="257dp"
            tools:layout_editor_absoluteY="284dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="0dp"
                android:textColorLink="#3F51B5"
                android:hint="Add your comment"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/ic_menu_add"
            tools:layout_editor_absoluteY="635dp"
            tools:layout_gravity="bottom">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </LinearLayout>

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/locationText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="60dp"
        android:background="#92F8B49F"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Welcome to the Forum!"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="42sp" />


</RelativeLayout>
